<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimarySurface">@android:color/white</item>
    </style>

    <style name="TextAppearance.MaterialComponents.ListItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">1</item>
    </style>

</resources>
